@model WebApplication1.ViewModels.Account.簡易註冊vm

@{
    ViewBag.Title = "註冊";
}



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="contact-area section-padding-0-80">
        <div class="container">
            <div class="row ">
                <div class="col-12 ">
                    <div class="contact-form-area ">
                        <form action="@Url.Action("registersuccess", "Account")" method="post">
                            <div class="row">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })



                                <div class="col-md-12 mt-5">
                                    @Html.EditorFor(model => model.f帳號, new { htmlAttributes = new { @class = "form-control", @placeholder = "帳號", @maxlength = "15" } })
                                    @Html.ValidationMessageFor(model => model.f帳號, "", new { @class = "text-danger" })
                                    <div>
                                        <span style="color:red">@ViewBag.Msgaccount</span>
                                    </div>
                                </div>




                                <div class="col-md-12 mt-2">
                                    @Html.EditorFor(model => model.f密碼, new { htmlAttributes = new { @class = "form-control", @placeholder = "密碼", @maxlength = "20" } })
                                    @Html.ValidationMessageFor(model => model.f密碼, "", new { @class = "text-danger" })
                                </div>




                                <div class="col-md-12  mt-2">
                                    @Html.EditorFor(model => model.f密碼_check2, new { htmlAttributes = new { @class = "form-control", @placeholder = "確認密碼", @maxlength = "20" } })
                                    @Html.ValidationMessageFor(model => model.f密碼_check2, "", new { @class = "text-danger" })
                                </div>



                                <div class="col-md-12  mt-2">
                                    @Html.EditorFor(model => model.f電子郵件, new { htmlAttributes = new { @class = "form-control", @placeholder = "E-mail" } })
                                    @Html.ValidationMessageFor(model => model.f電子郵件, "", new { @class = "text-danger" })
                                </div>

                                <div class="col-12 text-center">
                                    <input type="submit" value="註冊" class="btn delicious-btn mt-30" />
                                </div>


                                <div class="col-12 text-right mt-4">
                                    <span>
                                        已經有帳號了？點擊 <a href="@Url.Action("login", "Account")" class="single-contact-information">
                                            <h6>登入</h6>
                                        </a>
                                    </span>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>



}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
