
@{
    ViewBag.Title = "填寫評價";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

@section Breadcumb {
    @{ Html.RenderPartial("~/Views/Shared/_Breadcumb一般.cshtml"); }
}

<div class="contact-area section-padding-0-80">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="contact-form-area">
                    <form action="#" method="post">
                        <div class="row">
                            <div class="card-middle">
                                <div class="col-12 d-flex flex-wrap mt-5 card-style">
                                    <img id="memberimg" class="img-style" src="/Content/img/bg-img/bg1.jpg">
                                    <div class="card-bg receipe-ratings">
                                        <p class="mt-3">2020-11-04 中午</p>
                                        <table>
                                            <tr>
                                                <td>
                                                    <img id="headimg" class="circle-img-style"
                                                         src="/Content/img/bg-img/bg1.jpg">
                                                </td>
                                                <td>
                                                    <div>
                                                        <h5 class="ml-3 mt-2">私廚名稱</h5>
                                                    </div>
                                                    <div class="ratings mb-1 ml-3">
                                                        <i class="fa fa-star" aria-hidden="true"></i>
                                                        <i class="fa fa-star" aria-hidden="true"></i>
                                                        <i class="fa fa-star" aria-hidden="true"></i>
                                                        <i class="fa fa-star" aria-hidden="true"></i>
                                                        <i class="fa fa-star" aria-hidden="true"></i>
                                                    </div>
                                                </td>
                                            </tr>
                                        </table>
                                        <div>
                                            <h6 class="mt-4">套餐名稱</h6>
                                        </div>
                                        <div class="mt-2"><b>服務種類</b><span class="ml-3">服務種類</span></div>
                                        <div class="mt-2"><b>價　　格</b><span class="ml-3">NT$500/人</span></div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 receipe-ratings mt-5">
                                <div class="ratings">
                                    <label class="ml-4 pl-1 mr-5">星星評價</label>
                                    <span>
                                        <i class="fa fa-star-o" aria-hidden="true"></i>
                                        <i class="fa fa-star-o" aria-hidden="true"></i>
                                        <i class="fa fa-star-o" aria-hidden="true"></i>
                                        <i class="fa fa-star-o" aria-hidden="true"></i>
                                        <i class="fa fa-star-o" aria-hidden="true"></i>
                                    </span>
                                    <div id="msg" class="msg-style"></div>
                                    <input type="number" class="form-control" id="starscore" value=""
                                           style="display:none;" required>
                                </div>
                            </div>
                            <div class="col-12">
                                <textarea name="message" class="form-control" id="chef-summary" cols="30" rows="10"
                                          placeholder="私廚簡介" required></textarea>
                            </div>
                            <div class="col-12 text-center">
                                <button class="btn delicious-btn mt-30" type="submit"
                                        onclick="checkstar()">
                                    儲存
                                </button>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        (function (window, $) {

            $(function () {
                var isClicked = false;
                $('span i').hover(function () {
                    if (!isClicked) {
                        $(this).attr('class', 'fa fa-star');
                        var index = $(this).index();

                        for (var j = 0; j <= index; j++) {
                            $('span i:nth-child(' + j + ')').attr('class', 'fa fa-star');
                        }
                    }
                }
                    ,
                    function () {
                        if (!isClicked) {
                            $('span i').attr('class', 'fa fa-star-o');
                        }
                    }
                );

                $('span i').click(function () {
                    isClicked = true;
                    var index = $(this).index();
                    for (var j = 1; j <= index + 1; j++) {
                        $('span i:nth-child(' + j + ')').attr('class', 'fa fa-star');
                    }
                    for (var j = index + 2; j <= 5; j++) {
                        $('span i:nth-child(' + j + ')').attr('class', 'fa fa-star-o');
                    }
                    $('#starscore').val(index + 1);
                    $("#msg").html("");
                });
            });

            function checkstar() {
                var starscore = $('input[id=starscore]').val();
                if (starscore == '') {
                    $('#msg').html('至少評價一顆星。');
                    return false;
                }
            }
        })(window, $);
    </script>
}