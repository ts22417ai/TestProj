@model WebApplication1.ViewModels.Order.v登入VM

@{
    ViewBag.Title = "登入";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}


@section Breadcumb {
    @{ Html.RenderPartial("~/Views/Shared/_Breadcumb一般.cshtml"); }
}

<div class="contact-area section-padding-0-80">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="contact-form-area">
                    @using (Html.BeginForm(
                        "login",
                        "Order",
                        FormMethod.Post
                     ))
                    {
                        @Html.AntiForgeryToken()
                        <div class="row">
                            <div class="col-12 mt-5">
                                @Html.EditorFor(modelItem => modelItem.帳號, new { htmlAttributes = new { @class = "form-control", @id = "account", @placeholder = "帳號" } })
                            </div>
                            <div class="col-12 mt-2">
                                @Html.EditorFor(modelItem => modelItem.密碼, new { htmlAttributes = new { @class = "form-control", @id = "account", @placeholder = "密碼" } })

                            </div>
                            <div class="col-12 text-center">
                                <button class="btn delicious-btn mt-30" type="submit">登入</button>
                            </div>
                            <div class="col-12 text-right mt-4">
                                <span>還沒有帳號嗎？點擊 <a href="@Url.Action("register")" class="single-contact-information"><h6>註冊</h6></a></span>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

